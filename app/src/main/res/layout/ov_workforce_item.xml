<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/item_card_soft"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_place_name_ov_wo_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="15Â°C"
                android:textColor="@color/black"
                android:layout_marginLeft="150dp"
                android:textSize="18dp"
                android:id="@+id/txt_tempeture_ov_wo_it"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sunny_logo"
                android:layout_gravity="right"
                android:layout_marginLeft="16dp"
                android:id="@+id/img_sunny_logo_ov_wo_it"/>

            <!-- Add any other WItem views here -->

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address information goes here"
            android:id="@+id/txt_address_info_ov_wo_it"
            android:textSize="14sp"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
