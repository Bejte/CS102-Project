<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/item_card_soft"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"
    android:background="@drawable/border1"
    app:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border1">

            <TextView
                android:id="@+id/txt_place_name_ov_ai_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address information goes here"
                android:id="@+id/txt_address_info_ov_ai_it"
                android:textSize="14sp"
                android:textColor="@color/black"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:background="@drawable/border1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Most Urgent"
                android:textColor="@color/black"
                android:textStyle="italic|bold"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_most_urgent_ov_aid_it"
                android:text="Cloth"
                android:textSize="18sp"
                android:textColor="@color/black"/>



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
