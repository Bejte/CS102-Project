<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UILayer.HQOrganizer.Admin.AddEditOrganizationActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/main_background_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Organization"
            android:textAppearance="@style/TextAppearance.EarthquakeApp.Title"
            android:textSize="24sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textAppearance="@style/TextAppearance.MyApp.Subtitle1"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edt_organizationAddress_ac_ad_ed_or_ac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Addrees"
                android:textAppearance="@style/TextAppearance.MyApp.EditTextHint"
                android:inputType="text"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="18sp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edt_organizationName_ac_ad_ed_or_ac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.MyApp.EditTextHint"
                android:hint="Name"
                android:inputType="text"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/fragment_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/rdg_organizationType_ac_ad_ed_or_ac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdb_organizationTypeFirst_ac_ad_ed_or_ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disaster Area"
                        android:textSize="18sp"
                        android:background="@color/fragment_card"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/rdb_organizationTypeSecond_ac_ad_ed_or_ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aid Collection"
                        android:textSize="18sp"
                        android:background="@color/fragment_card"
                        android:textColor="@color/black" />

                    <RadioButton
                            android:id="@+id/rdb_organizationTypeThird_ac_ad_ed_or_ac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HeadQuarter"
                        android:textSize="18sp"
                        android:background="@color/fragment_card"
                        android:textColor="@color/black" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/item_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Organization"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_JobTeamOrganizator_fr_jo_in_fo_te_or_fr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_doneButton_ac_ad_ed_me_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Done"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_color" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/txt_AreaCode_ac_ad_ed_or_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@color/white"
                android:text="Sample Text\nSecond Line"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
