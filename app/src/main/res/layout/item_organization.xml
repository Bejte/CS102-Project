<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/item_card_soft"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_organization_name_it_or_it"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Organization A"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_edit_organization_type_it_or_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color_soft"
        android:text="Edit"
        android:textSize="18sp" />
</LinearLayout>