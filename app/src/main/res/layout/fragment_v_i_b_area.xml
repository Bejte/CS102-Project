<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".UILayer.Common.AreaFragment"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#EDEDED">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_info_fr_vib_ar_fr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <include layout="@layout/weather_by_hour_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <include
                android:id="@+id/food_available_container"
                layout="@layout/food_available" />

            <TextView
                android:id="@+id/txt_food_available_fr_vib_ar_fr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food available"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btn_see_other_jobs_vib_fr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See other jobs"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>


